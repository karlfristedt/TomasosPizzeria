
@model IEnumerable<UsersViewModel>

<a asp-controller="Account" asp-action="RegisterUser" class="btn btn-default">Lägg till användare</a>


<table class="table table-striped table-bordered">
    <caption>Användare</caption>
    <thead>
        <tr>
            <th>Användarnamn</th>
            <th>Roll</th>
            <th></th>
        </tr>
    </thead>
    <tbody>

        @foreach (var user in Model)
        {
            <tr>
                <td>@user.UserName</td>
                <td><div id="@user.UserName">@user.Role</div></td>
                <td>
                    <form asp-controller="Account" asp-action="ChangeRole" data-ajax="true" data-ajax-method="post" data-ajax-mode="replace" data-ajax-update="#@user.UserName">

                        <select name="role" asp-items=@ViewBag.Roles></select>
                        <button class="btn-default" type="submit">Ändra</button>
                        <input type="hidden" name="username" value="@user.UserName">

                    </form>
                </td>
            </tr>
        }

    </tbody>
</table>


