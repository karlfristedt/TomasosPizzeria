
@model IEnumerable<ApplicationUser>

<div class="container">

    <a asp-controller="Account" asp-action="RegisterUser" class="btn btn-default">Lägg till användare</a>

        <table class="table table-striped table-bordered">
            <caption>Användare</caption>
            <thead>
            <tr>
                <th>Namn</th>
                <th>Användarnamn</th>
                <th></th>
            </tr>
            </thead>
            <tbody>

            @foreach (var user in Model)
            {
                <tr>
                    <td>@user.Name</td>
                    <td>@user.UserName</td>
                    <td>
                        <div class="container">
                                <a asp-controller="Account" asp-action="EditUser" asp-route-id="@user.Id" class="btn btn-warning pull-right ">Ändra</a>
                                <a asp-controller="Account" asp-action="RemoveUser" asp-route-id="@user.Id" class="btn btn-danger pull-right">Ta bort</a>
                        </div>
                    </td>
                </tr>
            }

            </tbody>
        </table>
    
</div>