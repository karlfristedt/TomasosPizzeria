
@model List<ProductViewModel>

<a asp-controller="Menu" asp-action="AddProduct" class="btn btn-alert">Lägg till ingrediens</a>


    <table class="table table-striped table-bordered">
        
        <thead>
        <tr>
            <th>Beskrivning</th>
            <th></th>
        </tr>
        </thead>
        <tbody>

        @foreach (var prod in Model)
        {
            <tr>
                <td>@prod.ProduktNamn</td>
                <td>
                    <a asp-controller="Menu" asp-action="EditProduct" asp-route-produktId="@prod.ProduktId">Ändra</a>
                </td>
            </tr>
        }

        </tbody>
    </table>
